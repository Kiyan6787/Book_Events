@using Microsoft.AspNetCore.Identity
@using Book_Events.Infrastructure.Context
@model Book_Events.ViewModels.HomePageViewModel

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        color: #333;
    }

    h3{
        margin-bottom: 20px;
    }

    ul{
        list-style: none;
    }
</style>

<div class="container">
    <div class="row">

        <div class="col-md-6">
            <h3>Upcoming Events</h3>
            <hr />
            <ul>
                @foreach (var events in Model.PublicUpcomingEvents)
                {
                    <li>
                        <b><a asp-action="GetProductById" asp-controller="Event" asp-route-id="@events.Id">@events.Title</a></b> - @events.Date.ToString("dd/MM/yyyy") <br />
                        @events.Location - @events.Type
                    </li>
                    <hr />

                }
            </ul>
        </div>

        <div class="col-md-6">
            <h3>Past Events</h3>
            <hr />
            <ul>
                @foreach (var events in Model.PublicPastEvents)
                {
                    <li>
                        <b><a asp-action="GetProductById" asp-controller="Event" asp-route-id="@events.Id">@events.Title</a></b> - @events.Date.ToString("dd/MM/yyyy") <br />
                        @events.Location - @events.Type
                    </li>
                    <hr />
                }
            </ul>
        </div>
            
    </div>
</div>
